<Window x:Class="OverSeer.Logs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="ComboBox_Directories" ItemsSource="{Binding}" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="250" Cursor="" SelectionChanged="ComboBox_Directories_SelectionChanged"/>
        <Button x:Name="Button_Log" Margin="0,20,0,20"  Content="Open Log" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Click="Button_Log_Click"/>

    </Grid>
</Window>
