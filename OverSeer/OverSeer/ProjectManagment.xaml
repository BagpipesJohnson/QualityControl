<Window x:Class="OverSeer.ProjectManagment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjectManagment" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Height="200">
                <ComboBox x:Name="ComboBox_projects" SelectionChanged="ComboBox_projects_SelectionChanged" ItemsSource="{Binding}"></ComboBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="Button_CreateProject" Click="Button_CreateProject_Click">Create Project...</Button>
                <Button x:Name="Button_RemoveProject">Remove Project...</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
